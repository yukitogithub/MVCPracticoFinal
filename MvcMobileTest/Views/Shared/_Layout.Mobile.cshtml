<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width" />
        @System.Web.Optimization.Styles.Render("~/Content/themes/mycustomtheme-FER.css", "~/Content/themes/mycustomtheme-FER.css")
        @System.Web.Optimization.Styles.Render("~/Content/themes/jquery.mobile.icons.min.css", "~/Content/themes/jquery.mobile.icons.min.css")
        @System.Web.Optimization.Styles.Render("~/Content/IndexStyle.css", "~/Content/IndexStyle.css")
        @System.Web.Optimization.Styles.Render("~/Content/jquery.mobile.structure-1.4.0.min.css", "~/Content/jquery.mobile.structure-1.4.0.min.css")
        @System.Web.Optimization.Scripts.Render("~/Scripts/jquery-1.9.1.min.js", "~/Scripts/jquery-1.9.1.min.js")
        @System.Web.Optimization.Scripts.Render("~/Scripts/jquery.mobile-1.4.0.min.js", "~/Scripts/jquery.mobile-1.4.0.min.js")
        @RenderSection("css",false) 
        <script>
            $(document).ready(function () {
                $.mobile.ajaxEnabled = false; 
            });
        </script>
    </head> 
<body> 

    <div data-role="page" data-theme="a">
        @RenderBody()		
        <div data-role="footer">
            @RenderSection("footer", false)
            <p style="text-align:center">© @DateTime.Now.Year - Versión: @ViewContext.Controller.GetType().Assembly.GetName().Version - Made By Fernando Luján - lujanfernandogabriel@gmail.com</p>	
        </div>
    </div>
</body>
</html>