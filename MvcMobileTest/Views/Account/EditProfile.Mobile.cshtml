@model Practico.MvcMobile.Models.User
@{
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.Title = "Register";
}

@section css
{
    @System.Web.Optimization.Styles.Render("~/Content/jquery-ui.css", "~/Content/jquery-ui.css")
    @System.Web.Optimization.Scripts.Render("~/Scripts/jquery-ui-1.10.3.js", "~/Scripts/jquery-ui-1.10.3.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/IES_EditMobileJs.js", "~/Scripts/IES_EditMobileJs.js")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div data-role="header">
        @Html.ActionLink("Cancelar","Index","Home",null,new{@class="ui-btn ui-corner-all ui-shadow ui-btn-left ui-icon-refresh ui-btn-icon-left"})
        <h3>@ViewBag.Title <img height="48px" width="48px" src="http://www.neolo.com.ar/img/planes/features/mobile.gif" /></h3>
        <div data-role="button" class="ui-input-btn ui-btn ui-btn-right ui-icon-check ui-btn-icon-right ui-corner-all ui-shadow">
            Update
            <input id="update" type="submit" value="Guardar" data-enhanced="true"/>
        </div>
    </div>
    
    <div data-role="content">
        <h2>Informatorio Evaluation System</h2>
        @Html.HiddenFor(x => x.ID)
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { disabled = "true" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.Lastname)
            @Html.TextBoxFor(x => x.Lastname, new { disabled = "true" })
            @Html.ValidationMessageFor(x => x.Lastname)
        </div>
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.DNI)
            @Html.TextBoxFor(x => x.DNI, new { disabled = "true" })
            @Html.ValidationMessageFor(x => x.DNI)
        </div>
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.Date)
            @Html.TextBoxFor(x => x.Date, new { id = "datepicker", disabled = "true" })
            @Html.ValidationMessageFor(x => x.Date)
        </div>
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.Studies)
            @Html.DropDownListFor(x => x.Studies, new SelectList(Practico.MvcMobile.Controllers.AccountController.StudiesList), new { disabled = "true" })
            @Html.ValidationMessageFor(x => x.Studies)
        </div>
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { id = "email" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.Phone)
            @Html.TextBoxFor(x => x.Phone, new { id = "phone" })
            @Html.ValidationMessageFor(x => x.Phone)
        </div>
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.Province)
            @Html.TextBoxFor(x => x.Province, new { disabled = "true" })
            @Html.ValidationMessageFor(x => x.Province)
        </div>
        <div class="ui-field-contain">
            @Html.LabelFor(x => x.City)
            @Html.TextBoxFor(x => x.City, new { disabled = "true" })
            @Html.ValidationMessageFor(x => x.City)
        </div>
        <div data-role="popup" id="popupDialog" data-overlay-theme="b" data-theme="b" data-dismissible="false" style="max-width:400px;">
            <div data-role="header" data-theme="a">
                <h1 id="p-dialog-title">@ViewBag.ErrorTitle</h1>
            </div>
            <div role="main" class="ui-content">
                <h3 class="ui-title"></h3>
                <p id="p-dialog-message">@ViewBag.ErrorMessage</p>
                <div class="ui-input-btn ui-btn ui-corner-all ui-shadow">
                    OK
                    <input type="button" data-enhanced="true" data-transition="flow" value="OK" onclick="OK()"/>
                </div>
            </div>
        </div>
    </div>
}
    

